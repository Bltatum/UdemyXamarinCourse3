<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ContactBookSQLExercise.MainPage">
    <ContentPage.ToolbarItems>
       <ToolbarItem Text="Add" Order="Primary" Clicked="Add_Clicked"/>
   </ContentPage.ToolbarItems>
    <ListView x:Name="contactsListView" ItemSelected="contacts_ItemSelected">
        <ListView.ItemTemplate>
          <DataTemplate>
              <TextCell Text="{Binding FullName}" Detail="{Binding Id}" >
                  <TextCell.ContextActions>
                      <MenuItem
                          Text="Delete"
                          IsDestructive="True"
                          Clicked="Delete_Clicked"
                          CommandParameter="{Binding .}"/>
                  </TextCell.ContextActions>
              </TextCell>
          </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>